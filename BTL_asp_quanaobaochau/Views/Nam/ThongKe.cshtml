
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .container {
            position: relative;
            width: 30%;
            float: left;
            margin-left: 40px;
        }

        .fontText {
            background-color: green;
            padding-top: 75px;
            text-align: center;
            display: block;
            width: 100%;
            height: 150px;
            border: 1px solid black;
            color: white;
        }

        .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: .5s ease;
            background-color: #008CBA;
        }

        .container:hover .overlay {
            opacity: 1;
        }

        .text {
            color: white;
            font-size: 20px;
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            text-align: center;
        }
    </style>
</head>
<body>

    <h2 align="center">Trang thống kê</h2>

    <div class="container">
        <div class="fontText">Tổng số lượt người truy cập Web</div>
        <div class="overlay">
            <div class="text">13</div>
        </div>
    </div>

    <div class="container">
        <div class="fontText">Số lượt người đang truy cập Web</div>
        <div class="overlay">
            <div class="text">20</div>
        </div>
    </div>

    <div class="container">
        <div class="fontText">Sản phẩm bán chạy nhất</div>
        <div class="overlay">
            <div class="text">Tên sản phẩm</div>
        </div>
    </div>

</body>
</html>
